{
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
	"version": "0.2",
	"ignorePaths": [
		"pnpm-lock.yaml",
		"**.svg",
		".git/",
		".gitignore",
		".vscode/",
		"Dockerfile",
		"./packages/database/drizzle/",
		"./patches/"
	],
	"dictionaries": ["lorem-ipsum"],
	"useGitignore": true,
	"words": [
		"buildinfo",
		"codeowner",
		"compat",
		"corepack",
		"focusable",
		"linebreak",
		"lintable",
		"pawelblaszczyk",
		"plusplus",
		"repleffect",
		"syncpack",
		"topo",
		"tsbuildinfo",
		"tseslint",
		"typecheck",
		"typedefs"
	],
	"enableGlobDot": true,
	"enableFiletypes": ["dockerfile", "github-actions-workflow"]
}
